extensions:
	webloader: WebLoader\Nette\Extension

php:
	date.timezone: Europe/Prague

nette:
	application:
		errorPresenter: Error
		mapping:
			*: App\*Module\*Presenter

	session:
		expiration: 14 days
		save_path: '%appDir%/../temp/sessions'

webloader:
	css:
		frontend:
			files:
				- {files: ["*.css", "*.less"], exclude: ["bootstrap/*", "backend/*", "*print*"], from: %wwwDir%/css}
			fileFilters:
				- @lessFilter

		backend:
			files:
				- {files: ["*.css", "*.less"], exclude: ["bootstrap/*", "frontend/*", "*print*"], from: %wwwDir%/css}
			fileFilters:
				- @lessFilter

	js:
		frontend:
			remoteFiles:
				- "//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"
			files:
				- %wwwDir%/js/jquery-1.10.2.min.js
				- %appDir%/../packagist/twbs/bootstrap/js/transition.js
				- %appDir%/../packagist/twbs/bootstrap/js/alert.js
				- %appDir%/../packagist/twbs/bootstrap/js/button.js
				- %appDir%/../packagist/twbs/bootstrap/js/carousel.js
				- %appDir%/../packagist/twbs/bootstrap/js/collapse.js
				- %appDir%/../packagist/twbs/bootstrap/js/dropdown.js
				- %appDir%/../packagist/twbs/bootstrap/js/modal.js
				- %appDir%/../packagist/twbs/bootstrap/js/scrollspy.js
				- %appDir%/../packagist/twbs/bootstrap/js/tab.js
				- %appDir%/../packagist/twbs/bootstrap/js/tooltip.js
				- %appDir%/../packagist/twbs/bootstrap/js/popover.js
				- %appDir%/../packagist/twbs/bootstrap/js/affix.js
				- %appDir%/../packagist/nette/nette/client-side/netteForms.js
				- {files: ["*.js"], from: [%wwwDir%/js/shared, %wwwDir%/js/frontend]}

		backend:
			remoteFiles:
				- "//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"
			files:
				- %wwwDir%/js/jquery-1.10.2.min.js
				- %appDir%/../packagist/twbs/bootstrap/js/transition.js
				- %appDir%/../packagist/twbs/bootstrap/js/alert.js
				- %appDir%/../packagist/twbs/bootstrap/js/button.js
				- %appDir%/../packagist/twbs/bootstrap/js/carousel.js
				- %appDir%/../packagist/twbs/bootstrap/js/collapse.js
				- %appDir%/../packagist/twbs/bootstrap/js/dropdown.js
				- %appDir%/../packagist/twbs/bootstrap/js/modal.js
				- %appDir%/../packagist/twbs/bootstrap/js/scrollspy.js
				- %appDir%/../packagist/twbs/bootstrap/js/tab.js
				- %appDir%/../packagist/twbs/bootstrap/js/tooltip.js
				- %appDir%/../packagist/twbs/bootstrap/js/popover.js
				- %appDir%/../packagist/twbs/bootstrap/js/affix.js
				- %wwwDir%/js/live-form-validation.js
				- {files: ["*.js"], from: [%wwwDir%/js/shared, %wwwDir%/js/backend]}

includes:
	- config.parameters.neon
	- config.models.neon
	- config.services.neon
	- config.factories.neon
